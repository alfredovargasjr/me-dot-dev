---
import { Sizes } from '../tokens/core';
interface Props {
    variant?: 'ghost' | 'filled' | 'outlined';
    href?: string;
    size?: keyof typeof Sizes;
};

const { variant = 'filled', size = 'lg', href } = Astro.props;

const getStyles = () => {
    let buttonStyles = {};
    
    switch(variant) {
        case 'filled':
            buttonStyles = {
                ...buttonStyles,
                background: 'blue',
            };
            break;
        case 'ghost':
            buttonStyles = {
                ...buttonStyles,
                background: 'white',
                textColor: 'black',
                buttonShadow: '',

            };
            break;
        case 'outlined':
            buttonStyles = {
                ...buttonStyles,
                background: 'white',
                border: '1px blue'
            };
            break;
    }

    buttonStyles = {
        ...buttonStyles,
        textSize: Sizes[size].textSize
    }

    return buttonStyles;
};

const styles = getStyles();

---

<a href={href}><slot /></a>

<style define:vars={styles}>
    a {
		position: relative;
		display: flex;
		place-content: center;
		text-align: center;
		padding: 0.56em 2em;
		gap: 0.8em;
		color: var(--textColor);
		text-decoration: none;
		line-height: 1.1;
		border-radius: 999rem;
		overflow: hidden;
		background: var(--background);
        border: var(--border);
		box-shadow: var(--buttonShadow);
		white-space: nowrap;
        font-size: var(--textSize);
	}

    a:hover {
        cursor: pointer;
        background-color: lightgray;
    }

	@media (min-width: 20em) {
		a {
			font-size: var(--text-lg);
		}
	}

	/* Overlay for hover effects. */
	a::after {
		content: '';
		position: absolute;
		inset: 0;
		pointer-events: none;
		transition: background-color var(--theme-transition);
		mix-blend-mode: overlay;
	}

	a:focus::after,
	a:hover::after {
		background-color: hsla(var(--gray-999-basis), 0.3);
	}

	@media (min-width: 50em) {
		a {
			padding: 1.125rem 2.5rem;
			font-size: var(--text-xl);
		}
	}
</style>
